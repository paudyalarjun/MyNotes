@model MyNotes.Models.StudentLecture;


@{
    ViewData["Title"] = "Edit StidemtLecture Connection";
}



<div>
    <div>
        <div class="row">
            <div class="col-8"></div>
            <div class="col-4"></div>
        </div>

        <form asp-action="Edit" asp-controller="StudentLecture" method="post">

            <input type="hidden" asp-for="ID" />

            <div class="form-group">
                <label for="StudentID">Student Name:</label>
                @Html.DropDownListFor(model => model.StudentID, ViewBag.StudentList as SelectList, "Select Student", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="LectureID">Lecture:</label>
                @Html.DropDownListFor(model => model.LectureID, ViewBag.LectureList as SelectList, "Select Lecture", new { @class = "form-control" })
            </div>


            <div class="mb-3">
                <input type="submit" class="form-control btn btn-success" value="Save" />
            </div>
        </form>
    </div>
</div>
