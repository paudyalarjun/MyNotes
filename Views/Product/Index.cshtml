@model IEnumerable<Product>


@{
    ViewData["Title"] = "Products Page";
}




<div class="row">
    <div class="col-12 mx-auto">
        <div class="row d-flex">
            <div class="col-10"><h1 class="mt-2">List of Products:</h1></div>
            <div class="col-2"><a asp-action="create" class="btn btn-success form-control">Create Product</a></div>
        </div>

        <hr />

        @if (Model.Count() > 0)
        {
            <div class="row">

                @foreach (var product in Model.OrderByDescending(x => x.AddedDate))
                {
                    <div class="col-3">
                        <div class="p-3 tet-white rounded-2 my-2" style="background-color: #BADBED;">
                            <h2>@product.ProductName</h2>
                            <hr>
                            <h5>Product Unit: @product.Unit</h5>
                            <h5>Product Code: @product.ProductCode</h5>
                            <div class="top-btns">
                                <a asp-action="Edit" asp-route-id="@product.ID" style="color:white; padding: 3px; margin: 2px; border-radius: 30%; background-color:black;"><i class="bi bi-pencil-square"></i></a>
                                <a asp-action="Delete" asp-route-id="@product.ID" style="color:white; padding: 3px; margin: 2px; border-radius: 30%; background-color:black;"><i class="bi bi-trash-fill"></i></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>You don't have any products to display. </p>
        }

    </div>
</div>



