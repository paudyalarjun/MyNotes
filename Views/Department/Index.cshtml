@model IEnumerable<Department>


@{
    ViewData["Title"] = "Departments";
}

<div>
    <div>
        <h1><a asp-action="create" asp-controller="Department">Create</a></h1>
    </div>
    <hr />
    <div class="row">
        @foreach (var depart in Model)
        {
            <div class="m-2 p-1 col-3" style="background-color: orange;">
                <p>@depart.Name</p>

                <div class="top-btns">
                    <a asp-action="Edit" asp-route-id="@depart.ID" style="color:white; padding: 3px; margin: 2px; border-radius: 30%; background-color:black;"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-route-id="@depart.ID" style="color:white; padding: 3px; margin: 2px; border-radius: 30%; background-color:black;"><i class="bi bi-trash-fill"></i></a>
                </div>
            </div>
        }
    </div>
</div>
