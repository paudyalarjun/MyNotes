@model MyNotes.ViewModels.TeacherViewModel;


@{
    ViewData["Title"] = "Create Teacher Profile";
}



<div>
    <div>
        <div class="row">
            <div class="col-8"></div>
            <div class="col-4"></div>
        </div>

        <form asp-action="create" asp-controller="Teacher" method="post" >
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Address"></label>
                <input asp-for="Address" />
                <span asp-validation-for="Address"></span>
            </div>
            <div>
                <label asp-for="Gender"></label>
                <select asp-for="Gender" >
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Others">Others</option>
                </select>
                <span asp-validation-for="Gender"></span>
            </div>

            @* <div class="form-group">
                <label for="TeacherID">Teacher:</label>
                @Html.DropDownListFor(model => model.TeacherID, ViewBag.TeacherList as SelectList, "Select Teacher", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="DepartmentID">Department:</label>
                @Html.DropDownListFor(model => model.DepartmentID, ViewBag.DepartmentList as SelectList, "Select Department", new { @class = "form-control" })
            </div> *@


            <div class="mb-3">
                <input type="submit" class="form-control btn btn-success" value="Save" />
            </div>
        </form>
    </div>
</div>
